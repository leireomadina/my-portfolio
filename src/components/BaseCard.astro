---
interface Props {
	class?: string
}

const { class: className } = Astro.props
---

<article class:list={['card', className]}>
	<slot />
</article>

<style lang="scss">
	.card {
		padding: 2rem 0 2.5rem 0;
		border-bottom: 1px solid $color-grey;

		@include tablet {
			padding-left: 1.5rem;
			padding-right: 1.5rem;
		}
	}
</style>
