---
import ThemeToggler from './ThemeToggler.astro'
---

<header class="header">
	<ThemeToggler />
	<h1 class="header__title">
		<span class="header__headline">
			<span class="header__headline--block">Hi,</span> I'm <span class="header__headline--highlighted">Leire ğŸ‘‹ğŸ¼</span>
		</span>
		<span class="header__tagline">
			<span class="header__tagline--regular">I craft</span>
			digital experiences
		</span>
	</h1>
</header>

<style lang="scss">
	.header {
		position: relative;
		padding: 6rem 1rem 1rem 1rem;

		&__title {
			margin: 0;
			font-family: $font-title-italic;
			font-size: 11vw;
			letter-spacing: 2px;

			@include tablet {
				font-size: 5rem;
			}

			@include desktop {
				font-size: clamp(5rem, 5.5vw, 7rem);
			}
		}

		&__headline {
			display: block;

			&--block {
				@include only-small-mobile {
					display: block;
				}
			}

			&--highlighted {
				color: $color-pink-dark;
			}
		}

		&__tagline {
			letter-spacing: 5px;

			&--regular {
				font-family: $font-title;
				letter-spacing: 2px;
			}
		}
	}
</style>
