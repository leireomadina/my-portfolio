---
interface Props {
	text: string
}

const { text } = Astro.props
---

<div class="tag">
	<p class="tag__text">{text}</p>
</div>

<style lang="scss">
	.tag {
		&__text {
			margin: 0;
			font-size: 1rem;
			font-family: $font-title-italic;

			@include tablet {
				font-size: 1.2rem;
			}

			@include desktop {
				font-size: 1.5rem;
			}
		}
	}
</style>
